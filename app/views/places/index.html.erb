<p id="notice"><%= notice %></p>

<h1>Listing Places</h1>

<table>
  <thead>
    <tr>
      <th>Formatted address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <% photo = place.photos.sample %>

      <tr>
        <td><%= place.formatted_address %></td>
        <td><%= image_tag photos_show_path(photo.id), size: "65x50" if photo %></td>
        <td><%= link_to 'Show', place %></td>
      </tr>
    <% end %>
  </tbody>
</table>
